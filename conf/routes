# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

POST    /signUp                     controllers.Application.signUp()

GET     /addNominee                 controllers.Application.addNominee()

POST    /addNomineePost             controllers.Application.addNomineePost()

GET    /listNominees/:id            controllers.Application.listNominees(id: Int)

GET    /relationship                controllers.Application.relationship()

POST   /relationshipPost/:user1/:user2  controllers.Application.relationshipPost(user1: String, user2: String)

POST  /asyncRelationship            controllers.Application.asyncRelationship()

GET  /asyncRelationships/:source/:destination    controllers.Application.asyncRelationships(source: String, destination: String)

#GET    /promise                     controllers.Application.indexa()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
